<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Urunler</h1>
    <p><%=urunler[0].name %></p>
    <p><%=urunler[0].price %></p>

    <ul>
      <% urunler.forEach(urun => { %> <% if (urun.price >= 5000 &&
      urun.isActive) { %>

      <li>
        <a href="/products/<%= urun.id %>">
          <%= urun.name %> - <%= urun.price %>$</a
        >
      </li>
      <% } %> <% }) %>
    </ul>
  </body>
</html>
