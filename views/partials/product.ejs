<div class="card mb-3">
  <div class="row">
    <div class="col-4">
      <img src="/images/<%=imageUrl %>" alt="<%=name %>" class="img-fluid" />
    </div>
    <div class="col-8">
      <div class="card-body">
        <h5 class="card-title"><%=name %></h5>
        <p class="card-text"><%=price %></p>
      </div>
      <a href="products/<%=id %>" class="btn btn-primary btn-sm">Details</a>
    </div>
  </div>
</div>
