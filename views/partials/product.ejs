<div class="card mb-3">
  <div class="row">
    <div class="col-4">
      <img
        src="/images/<%=product.imageUrl %>"
        alt="<%=product.name %>"
        class="img-fluid"
      />
    </div>
    <div class="col-8">
      <div class="card-body">
        <h5 class="card-title"><%=product.name %></h5>
        <p class="card-text"><%=product.price %></p>
      </div>
      <a href="products/<%=product.id %>" class="btn btn-primary btn-sm"
        >Details</a
      >
    </div>
  </div>
</div>
